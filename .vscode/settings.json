{
    "cSpell.words": [
        "Linq",
        "addin",
        "addins",
        "intellisense",
        "langword",
        "nunit",
        "NUnit",
        "paramref",
        "typeparam",
        "typeparamref",
        "wiki"
    ],
    "cSpell.enabled": true,
    "cSpell.enableFiletypes": [
        "aspnetcorerazor"
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wrappingIndent": "same",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120],
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "always"
    }
}